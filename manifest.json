{
  "manifest_version": 2,

  "name": "Bridge the Media",
  "description": "Get outside your bubble. Expand your horizons. Read across the political spectrum",
  "version": "1.5",
  "icons": { "16": "btm_logo.png",
           "48": "btm_logo.png",
          "128": "btm_logo.png" },

  "browser_action": {
    "default_icon": "btm_logo_32.png",
    "default_popup": "popup.html",
    "default_title": "Bridge the Media"
  },

  "background": {
    "page" : "popup.html",
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["http://www.nytimes.com/*",
      "https://www.nytimes.com/*",
      "http://www.foxnews.com/*",
      "https://www.foxnews.com/*",
      "https://www.facebook.com/*",
      "http://www.facebook.com/*"

      ],
      "css": ["font-awesome-4.7.0/css/font-awesome.css", "popup.css"],
      "js": ["jquery-3.2.0.js", "link_hover.js", "btm-facebook.js", "bootstrap-3.3.7-dist/js/bootstrap.js"]
    }
  ],
  "permissions": [
    "background",
    "activeTab",
    "https://ajax.googleapis.com/",
    "https://cse.google.com/*"
  ],

  "web_accessible_resources": ["font-awesome-4.7.0/fonts/fontawesome*",
  "btm_logo_24.png",
  "btm_logo_32.png",
  "btm_logo.png"],
  "content_security_policy": "script-src 'self' https://cse.google.com https://www.google.com https://code.jquery.com https://ssl.google-analytics.com; object-src 'self'"

}
