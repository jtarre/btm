{
  "manifest_version": 2,

  "name": "Bridge the Media",
  "description": "Get outside your bubble. Expand your horizons. Read across the political spectrum",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click here!"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["font-awesome-4.7.0/css/font-awesome.css"], 
      "js": ["jquery-3.2.0.js", "link_hover.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "https://cse.google.com/*"
  ],
  "web_accessible_resources": ["font-awesome-4.7.0/fonts/fontawesome*"],
  "content_security_policy": "script-src 'self' https://cse.google.com https://www.google.com https://code.jquery.com; object-src 'self'"

}